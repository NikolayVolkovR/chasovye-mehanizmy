    justify-content: center;
    align-items: center;
    z-index: 99999;
    &.message_visible {
      opacity: 1;
    }
    .message__shadow {
      position: absolute;
      width: 100%;
      min-height: 100%;
      left: 0;
      top: 0;
      background: #fff;
      opacity: .9;
      cursor: pointer;
      z-index: 999991;
    }
