  html, body {
    margin: 0;
    height: 100%;
    font-family: "Alegreya Sans";

    a {
      color: inherit;
      text-decoration: none;
      font-family: "Alegreya Sans Light";

      &:hover {
        text-decoration: none;
      }
    }
  }

  h1 {
    color: #333333
    font-family: "Alegreya Sans"
    font-weight: bold;
    font-size: 38px;
    margin: 40px 0 0;

    @media only screen and (max-width: 700px) {
      font-size: 30px;
    }
    @media only screen and (max-width: 500px) {
      font-size: 26px;
    }
  }
  .wrap {
    min-height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;

    header {
      box-sizing: border-box;

      .pc {
        display: flex;
        justify-content: space-between;
        width: 1180px;
        margin: 10px auto 0;

        .logo {
          flex-basis: 266px;

          @media only screen and (max-width: 640px) {
            display: none
          }

          img {
            width: 100%;
          }
        }

        .logo-compact {
          max-width: 107px;
          display: none;
          max-height: 80px;

          @media only screen and (max-width: 640px) {
            display: block;
          }

          img {
            height: 100%;
          }
        }
        .phones {
          color: color-1;
          font-size: 34.7px;
          min-width: 210px;
          margin-left: 20px;

          @media only screen and (max-width: 760px) {
            margin-left: 20px;
          }
          @media only screen and (max-width: 700px) {
            font-size: 29px;
            min-width: 185px;
            margin-left: 10px;
          }

          .prefix {
            color: color-2;
            font-size: 17px;
          }
        }

        .messengers {
          color: color-1;
          margin-left: 20px;

          @media only screen and (max-width: 1000px) {
            display: none;
          }
          .item {
            display: flex;
            align-items: center;
            margin-top: 7px;

            &:first-child {
              margin-top: 0;
            }

            .icon {
              display: flex;
              align-items: center;
              width: 26px;
              height: 26px;
              margin-right: 10px;

              img {
                width: 100%;
              }
            }
          }
        }
        .messengers-social {
          display: flex;
          margin-left: 20px;

          @media only screen and (max-width: 860px) {
            flex-wrap: wrap;
            flex-direction: column;
          }
          @media only screen and (max-width: 760px) {
            flex-direction: row;
            flex-wrap: nowrap;
            margin-left: 20px;
            align-items: flex-start;
          }
          @media only screen and (max-width: 700px) {
            flex-direction: column;
            align-items : center;
            margin-left: 10px;
          }

          .messengers-compact {
            display: none;

            @media only screen and (max-width: 1000px) {
              display: flex;
            }
            @media only screen and (max-width: 760px) {
              flex-direction: column;
              justify-content: space-between;
              width: 26px;
            }
            @media only screen and (max-width: 700px) {
              flex-direction: row;
              width: auto;
            }

            .item {
              position: relative;
              width: 26px;
              height: 26px;
              margin-right: 10px;

              &:last-child {
                margin-right: 0;
              }

              @media only screen and (max-width: 760px) {
                margin-right: 0;
                margin-bottom: 7px;

                &:last-child {
                  margin-bottom: 0;
                }
              }
              @media only screen and (max-width: 700px) {
                margin-right: 10px;
                margin-bottom: 0;

                :last-child {
                  margin-right: 0;
                }
              }

              .icon {
                width: 26px;
                height: 26px;
                cursor: pointer;
                display: flex;
                align-items: center;

                img {
                  width: 100%;
                }
              }

              .value {
                display: none;
                position: absolute;
                left: -100px;
                top: 30px;
                background: #fff;
                border: solid 2px color-12;
                border-radius: 5px;
                padding: 10px;
                width: 230px;
                text-align: center;
                transition: all 0.3s;
                z-index:999;
                &.open-enter {
                  opacity: 0;
                  display: block;
                  transform: translateY(-40px);
                }
                &.open-to {
                  display: block;
                }
              }
            }
          }
          .social {
            display: flex;

            @media only screen and (max-width: 1000px) {
              margin-left: 20px;
            }
            @media only screen and (max-width: 860px) {
              margin-left: 0;
              margin-top: 10px;
              justify-content: center;
            }
            @media only screen and (max-width: 760px) {
